
{% extends "JPMaritimeBundle:Default:index.html.twig" %}
 

{% block main %}
<div class="">
            <div class="page-title">
              <div class="title_left">
                <h3>Affecter une étape de dossier à un utilisateur</h3>
              </div>

              
            </div>



            <div class="clearfix"></div>

            <div class="row">
              <div class="col-md-12">
                <div class="x_panel">
                  
                  <div class="x_content">

                    <section class="content invoice">
                      <!-- title row -->
                      <div class="row">
                        <div class="col-xs-12 invoice-header">
                          <h1>
                              <i class="fa fa-folder"></i> DOSSIER N° : {{folder.folderNumber}}
                              <small class="pull-right">Date de création : {{folder.createdAt|date('d-m-Y H:i')}}</small>
                          </h1>
                        </div>
                        <!-- /.col -->
                      </div>
                      <!-- info row -->

                      <div class="clearfix"></div>
                      <br>

                      <div class="row invoice-info">
                        <div class="col-sm-12 invoice-col">
                            {{ form_start(form,{'attr':{'class':'form-horizontal form-label-left'}}) }}
                        {{ form_errors(form) }}

                       

                       <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" >Etape <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">   
                          
                               {{ form_errors(form.etape) }}
                           {{ form_widget(form.etape, {'attr': {'class': 'form-control col-md-7 col-xs-12', 'placeholder':''}}) }}
                          
                        </div>
                      </div>

                       <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Utilisateur <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">  
                         {{ form_errors(form.user) }} 
                           {{ form_widget(form.user, {'attr': {'class': 'form-control col-md-7 col-xs-12', 'placeholder':''}}) }}
                        </div>
                      </div>

                      
                        
                        <div class="ln_solid"></div>
                      <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                         
                          <input  type="submit" class="btn btn-success" />
                        </div>
                      </div>
                    {{ form_end(form) }}
                           
                        </div>
                        
                      </div>


                        

                    </section>
                  </div>
                </div>
              </div>
            </div>
    </div>
  {% endblock %}